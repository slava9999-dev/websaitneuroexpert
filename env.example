# Environment variables for NeuroExpert backend
# Copy this file to .env and fill with actual values

# Database (Required)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=neuroexpert_db

# AI Integration
# REQUIRED: OpenAI API key (used for GPT-4o-mini chat)
OPENAI_API_KEY=your_openai_api_key

# OPTIONAL: Other AI providers (for future use)
# ANTHROPIC_API_KEY=your_anthropic_api_key
# GOOGLE_API_KEY=your_google_api_key
# EMERGENT_LLM_KEY=your_emergent_llm_api_key

# Telegram (Optional, for contact form notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Frontend/CORS (Required in production)
CLIENT_ORIGIN_URL=http://localhost:3000

# Environment
ENVIRONMENT=development

# Sentry (Optional, for error monitoring)
SENTRY_DSN=your_sentry_dsn
# Frontend Sentry (add to Vercel env vars)
# VITE_SENTRY_DSN=your_frontend_sentry_dsn

# Logging (Optional)
LOG_LEVEL=INFO

# AI Chat Settings (Optional)
MAX_CONTEXT_TOKENS=3000
MAX_HISTORY_MESSAGES=20
CHAT_TIMEOUT_SECONDS=30

